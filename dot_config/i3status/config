general {
        colors = true
        interval = 5
	output_format = i3bar
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /home"
order += "load"
order += "volume master"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "tztime local"


wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

